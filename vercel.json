{
  "buildCommand": "NODE_OPTIONS='--max-old-space-size=1536 --max-semi-space-size=128 --gc-interval=50' npm run build:minimal",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "functions": {
    "app/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "app/api/**/*.js": {
      "memory": 512,
      "maxDuration": 15
    }
  },
  "regions": ["iad1"],
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=1536 --max-semi-space-size=128"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}