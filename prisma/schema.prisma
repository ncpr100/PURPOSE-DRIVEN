enum ExperienceLevel {
  NOVATO // Beginner - no prior experience
  INTERMEDIO // Intermediate - some experience
  AVANZADO // Advanced - extensive experience
}

// Leadership development pipeline stages
enum LeadershipStage {
  VOLUNTEER // Active volunteer, not in leadership
  TEAM_COORDINATOR // Coordinates small team or specific tasks
  MINISTRY_LEADER // Leads entire ministry or department
  SENIOR_LEADER // Multi-ministry oversight, strategic planning
  PASTOR // Pastoral leadership, spiritual oversight
}

// Visitor profile with auto-categorization
model VisitorProfile {
  id        String  @id @default(cuid())
  checkInId String? // First check-in that created this profile
  memberId  String? // If converted to member

  // Basic info
  fullName         String
  phone            String?
  email            String?
  preferredContact String  @default("email") // email, sms, whatsapp, phone

  // Auto-categorization
  category       VisitorCategory @default(FIRST_TIME)
  visitCount     Int             @default(1)
  lastVisitDate  DateTime        @default(now())
  firstVisitDate DateTime        @default(now())

  // Engagement tracking
  followUpsSent      Int      @default(0)
  followUpsResponded Int      @default(0)
  interestAreas      String[] // Ministries, events they showed interest in
  prayerRequestsMade Int      @default(0)
  eventAttendance    Int      @default(0)

  // CRM auto-entry
  autoAddedToCRM  Boolean   @default(false)
  crmAddedAt      DateTime?
  assignedStaffId String?

  // Metadata
  source   String? // How they found the church
  notes    String? @db.Text
  metadata Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  assignedStaff User?             @relation(fields: [assignedStaffId], references: [id])
  member        Member?           @relation(fields: [memberId], references: [id])
  followUps     VisitorFollowUp[] @relation("VisitorProfileFollowUps")

  @@index([category])
  @@index([email])
  @@index([phone])
  @@index([lastVisitDate])
  @@map("visitor_profiles")
}
