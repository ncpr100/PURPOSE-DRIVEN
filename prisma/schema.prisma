}

model Donation {
  id              String            @id @default(cuid())
  amount          Float
  currency        String            @default("COP")
  donorName       String?
  donorEmail      String?
  donorPhone      String?
  memberId        String?
  categoryId      String
  paymentMethodId String
  reference       String?
  notes           String?
