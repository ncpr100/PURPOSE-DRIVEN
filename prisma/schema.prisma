generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model accounts {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              user    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model sessions {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user {
  id            String      @id
  name          String?
  email         String      @unique
  emailVerified DateTime?
  image         String?
  role          String?     @default("MIEMBRO")
  isActive      Boolean     @default(true)
  churchId      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  accounts      accounts[]
  sessions      sessions[]
  church        church?     @relation(fields: [churchId], references: [id])

  @@index([churchId])
  @@index([role])
}

model church {
  id            String   @id @default(cuid())
  name          String
  description   String?
  address       String?
  city          String?
  state         String?
  zipCode       String?
  country       String?  @default("MÃ©xico")
  phone         String?
  email         String?
  website       String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  users         user[]
  uploads       uploads[]
}

model verificationtokens {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model uploads {
  id          String   @id @default(cuid())
  filename    String
  originalName String
  mimeType    String
  size        Int
  url         String
  uploadedBy  String
  churchId    String?
  category    String?  @default("general")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  church      church?  @relation(fields: [churchId], references: [id])

  @@index([churchId])
  @@index([category])
  @@index([uploadedBy])
}